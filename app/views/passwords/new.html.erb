<% content_for :log_content do %>

<div id="clearance" class="password-reset">
  <h1 class="simple" style="width:50%;"><%= t '.title' %></h1>

  <p><%= t '.description' %></p>

  <%= form_for :password, :url => passwords_path do |form| %>
    <div class="text-field">
      <%= form.label :email %>
      <%= form.text_field :email, :type => 'email', :style=>"width: auto;"  %>
    </div>

    <div class="submit-field">
      <%= form.submit %>
    </div>
  <% end %>
</div>

<%end%>
